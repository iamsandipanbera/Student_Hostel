<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTotalMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Meals: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTotalDeposits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Deposits: ₹"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTotalBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill: ₹"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDueAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Amount: ₹"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnShareDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Details via WhatsApp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
